@model MVC3.Models.Vacancy

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Vacancy</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VacancyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VacancyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalVacancyCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalVacancyCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title.TitleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title.TitleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
        <dt class="col-sm-2">
            Projects
        </dt>
        <dd class="col-sm-10">
            @foreach (var project in Model.VacancyProjects.Select(vp => vp.Project))
            {
                <p>@project.ProjectName</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="VacancyApplicants" asp-action="Create" asp-route-id="@Model.VacancyId">Apply</a> |
    <a asp-action="Edit" asp-route-id="@Model.VacancyId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
