@model List<SubmissionViewModel>

@{
    ViewData["Title"] = "View Submissions";
    var vid = ViewData["vid"] as int?;
}

<h1>Submissions for Vacancy @vid</h1>

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Years of Experience</th>
                <th>CV</th>
                <th>HR</th>
                <th>Technical</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ApplicantFirstName</td>
                    <td>@item.ApplicantLastName</td>
                    <td>@item.YearsOfExperience</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ResumeFilePath))
                        {
                            <a href="@Url.Content(item.ResumeFilePath)" target="_blank">View CV</a>
                        }
                        else
                        {
                            <a>
                                No CV Available
                            </a>
                        }
                    </td>
                    <td>@item.HR_Status</td>
                    <td>@item.Technical_Status</td>
                    <td class="d-flex flex-row justify-content-around">
                        <div>
                            @Html.ActionLink("Details", "Details", "Applicants", new { id = item.ApplicantId, toviewsubmission = true })
                        </div>
                        <div>
                            @if (item.Applicant_Status == "pending" && item.HR_Status != "Done")
                            {
                                @Html.ActionLink("HR_Evaluate", "HRQuestions", "InterviewEvaluate",
                                         new { area = "Access", applicantid = item.ApplicantId, vid = vid }, null)
                            }
                            else if (item.Applicant_Status == "pending" && item.HR_Status == "Done")
                            {
                                <h6 class="text-bg-secondary tch-tooltip">
                                    Waiting Technical
                                    <span class="tooltip-text">@item.TechnicalInterview</span>
                                </h6>
                            }
                            else if (item.Applicant_Status == "Disapproved")
                            {
                                <h6 class="text-bg-danger">Dis-approved</h6>
                            }
                            else
                            {
                                <h6 class="text-bg-success">Approved</h6>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table-responsive {
        overflow-x: auto;
        overflow-y: auto; /* Add vertical overflow */
        max-height: 600px; /* Adjust height as needed */
    }

    .table {
        border-collapse: collapse; /* Ensure borders and spacing are consistent */
        width: 100%;
    }

    thead th {
        position: sticky;
        top: 0;
        background-color: #f9f9f9; /* Adjust background color */
        z-index: 2; /* Ensure headers are above other content */
        border-bottom: 2px solid #ddd; /* Optional: add a border for visual separation */
    }

    tbody td {
        white-space: nowrap; /* Prevent text wrapping */
    }

    /* Add spacing between action links */
    .table td a {
        margin-right: 10px; /* Adjust this value as needed */
    }

        /* Remove margin from the last link */
        .table td a:last-child {
            margin-right: 0;
        }

    .tch-tooltip {
        position: relative;
        display: inline-block;
        cursor: pointer;
    }

        .tch-tooltip span {
            position: absolute;
            background-color: #fff;
            color: #1e90ff;
            font-size: 14px;
            padding: 8px 12px;
            border-radius: 4px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            top: 100%;
            left: 50%;
            transform: translateX(-50%);
            white-space: nowrap;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
            z-index: 1;
        }

        .tch-tooltip:hover span {
            opacity: 1;
            visibility: visible;
        }
</style>
