@inject UserManager<ApplicationUser> UserManager;
@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
    <a asp-action="Register" asp-controller="Account" asp-area="identity"
       class="btn btn-primary mb-3" style="width:auto">
        Add new user
    </a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 30%;">User Name</th>
                <th>projects</th>
                <th>Department</th>
                <th>Edit</th>
                <th>User Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                string projects = "";
                string department="";
                foreach (var project in user.UserDepartmentProject)
                {
                    projects += project.Project.ProjectName;
                    projects += ",";
                    department = project.Department.DepartmentName;
                }
                projects = (projects.Length>0)?projects.Substring(0, projects.Length - 1):projects;
                var rowClass = user.Active ? "" : "table-secondary";
                <tr class="@rowClass">
                    <td>@user.UserName</td>
                    <td>@projects</td>
                    <td>@department</td>
                    <td>
                        @if (!await UserManager.IsInRoleAsync(user, "Admin"))
                        {
                            <a asp-action="EditUser" asp-controller="adminstration" asp-area="identity" asp-route-id="@user.Id"
                               class="btn btn-primary">
                                Edit User
                            </a>
                        }
                    </td>
                    <td>
                        <form method="post" asp-action="UpdateActive" asp-controller="adminstration" asp-area="identity">
                            <input type="hidden" name="userId" value="@user.Id" />

                            <div class="form-check d-flex justify-content-between align-items-center" style="width:100%;">
                                <input type="checkbox" class="form-check-input mt-0" name="active" value="true" @(user.Active ? "checked" : "")
                                @(await UserManager.IsInRoleAsync(user, "Admin") ? "disabled" : "") />
                                <label class="mt-2" for="activeCheckbox">Active</label>
                                @if (!await UserManager.IsInRoleAsync(user, "Admin"))
                                {
                                    <button type="submit" class="btn btn-primary">Update</button>
                                }
                            </div>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Account" asp-area="identity" asp-action="Register">
                Add new user
            </a>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/site.js"></script>
}