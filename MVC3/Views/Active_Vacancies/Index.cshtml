@model IEnumerable<activeVacanciesViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Active Vacancies</h1>

@if (Model == null || !Model.Any())
{
    <div class="no-vacancies-message">
        <h2>No current active vacancies</h2>
    </div>
}
else
{
<div class="vacancies-list">
    @foreach (var activevacancy in Model)
    {
        <div class="vacancy-card">
                <h2>@activevacancy.vacancyname</h2>
                <p>@activevacancy.TotalVacancyCount vacancies available</p>
                <p><strong>Title:</strong> @activevacancy.TitleName</p>
            <p>
                <strong>Locations:</strong>
                    @foreach (var location in activevacancy.locations)
                {
                    @location.LocationName

                    <br />
                }
            </p>
            <p><strong>Status:</strong>Active</p>
            <p>
                    <a asp-action="Details" asp-route-id="@activevacancy.vacancyid">Apply</a>
            </p>
        </div>
    }
</div>
}

@section Scripts {
    <style>
        .vacancies-list {
            display: flex;
            flex-wrap: wrap;
        }

        .vacancy-card {
            border: 1px solid #ddd;
            padding: 16px;
            margin: 16px;
            width: 300px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .vacancy-card h2 {
                font-size: 1.5em;
                margin-bottom: 8px;
            }

            .vacancy-card p {
                margin: 4px 0;
            }
    </style>
}
